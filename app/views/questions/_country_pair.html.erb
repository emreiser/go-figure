<%= form_for @answer do |f| %>
	<%= f.hidden_field :country_1_id, value: @country_1.id %>
	<%= f.hidden_field :country_2_id, value: @country_2.id %>
	<%= f.submit @country_1.name, name: 'selected_country_id', value: @country_1.id %>
	<%= f.submit @country_2.name, name: 'selected_country_id', value: @country_2.id %>
<% end %>